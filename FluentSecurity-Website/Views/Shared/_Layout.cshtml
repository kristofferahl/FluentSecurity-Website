<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Styles/Main.css?v=1")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>

<body>
	<div id="wrapper">
		<div id="header">
			<ul id="menu">
				<li>@Html.ActionLink("Home", "Index", "Content")</li>
				<li>@Html.ActionLink("Getting started", "GettingStarted", "Content")</li>
				<!--<li><a href="#">Documentation</a></li>-->
				<li><a href="https://github.com/kristofferahl/FluentSecurity/downloads">Downloads</a></li>
				<li><a href="https://github.com/kristofferahl/FluentSecurity">Contribute</a></li>
				<li><a href="https://github.com/kristofferahl/FluentSecurity/issues">Support</a></li>
			</ul>
			<div class="highlights">
				<div id="pitch">
					<h1><img src="@Url.Content("~/Content/Images/Fluent Security-Logo-6-Icon-100x100.png")" id="logo" /> <a href="index.html"><span>Fluent</span> Security</a> configuration<br />for ASP.NET MVC</h1>
					<p class="elevator-pitch"><strong>Fluent Security provides a fluent interface for configuring security in ASP.NET MVC. No attributes or nasty xml, just pure love. Go get it on NuGet!</strong></p>
					<div class="commandWrapper">
						<div class="commandPrompt">
							<p class="command">PM&gt; Install-Package FluentSecurity</p>
						</div>
					</div>
				</div>
				@RenderSection("Highlights", false)
			</div>
		</div>
		<div id="main">
			@RenderBody()
		</div>
		<!--<div id="footer">
			<p id="secondary-menu">
				<a class="current" href="#">Home</a>
				<a href="#">Getting started</a>
				<a href="#">Downloads</a>
				<a href="#">Contribute</a>
				<a href="#">Support</a>
			</p>
		</div>-->
	</div>
</body>
</html>